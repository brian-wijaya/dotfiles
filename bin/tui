#!/bin/bash
# Launch TUI apps in a new terminal with proper window class
# Usage: tui <app> [args...]
# Example: tui btop, tui lazygit, tui nvim file.txt

APP="$1"
shift
ARGS="$@"

if [[ -z "$APP" ]]; then
    echo "Usage: tui <app> [args...]"
    echo "Examples: tui btop, tui lazygit, tui nvim"
    exit 1
fi

# Set window class to tui-<appname> for i3 rules
CLASS="tui-${APP}"

# Launch in ghostty with custom class
exec ghostty --class="$CLASS" -e "$APP" $ARGS
