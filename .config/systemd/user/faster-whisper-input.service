[Unit]
Description=Faster Whisper input (hold-to-dictate, Pause key via evdev)
After=faster-whisper.service
Requires=faster-whisper.service

[Service]
Type=simple
Environment=LD_LIBRARY_PATH=%h/.local/share/dictation-venv/lib/python3.14/site-packages/nvidia/cublas/lib
ExecStart=%h/bin/dictate-hold
Restart=on-failure
RestartSec=3

[Install]
WantedBy=default.target
