[Desktop Entry]
Version=1.0
Type=Application
Name=Actual Server Gateway
GenericName=MCP Gateway
Comment=MCP gateway for desktop embodiment, knowledge architecture, and ambient intelligence
Icon=network-server
Terminal=false
StartupNotify=false
Categories=Development;
Keywords=mcp;gateway;actual;server;tools;

Exec=/home/bw/actual-server/bin/actual-server-ctl health

Actions=status;restart;stop;neo4j;grafana;logs;

[Desktop Action status]
Name=Show Status
Exec=/home/bw/actual-server/bin/actual-server-ctl status

[Desktop Action restart]
Name=Restart Service
Exec=/home/bw/actual-server/bin/actual-server-ctl restart

[Desktop Action stop]
Name=Stop Service
Exec=/home/bw/actual-server/bin/actual-server-ctl stop

[Desktop Action neo4j]
Name=Open Neo4j Browser
Exec=xdg-open http://localhost:7474

[Desktop Action grafana]
Name=Open Grafana Dashboard
Exec=xdg-open http://localhost:3000

[Desktop Action logs]
Name=View Logs (Terminal)
Exec=/home/bw/actual-server/bin/actual-server-ctl logs
