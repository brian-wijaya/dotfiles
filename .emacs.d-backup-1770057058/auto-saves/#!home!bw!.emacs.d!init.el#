  (define-key bw/leader-h-map (kbd "d") 'devdocs-lookup)
  (define-key bw/leader-hr-map (kbd "R") 'reload-init)

  ;; --- SPC i - insert ---
  (define-key bw/leader-i-map (kbd "t") 'bw/stamp-todo)
