  ;; -------------------------------------------------------------------------
  ;; üîë which-key (eager - instant, with emojis)
  ;; -------------------------------------------------------------------------
  (use-package which-key
    :demand t
    :config
    (which-key-mode 1)
    (setq which-key-idle-delay 0.01
          which-key-idle-secondary-delay 0.01
          which-key-separator ":"
          which-key-prefix-prefix ""
          which-key-add-column-padding 2
          which-key-show-early-on-C-h t
          echo-keystrokes 0.01)
    ;; Label the prefix keymaps
    (which-key-add-keymap-based-replacements bw/leader-map
      "b" "üìã+buffers"
      "c" "üíª+code"
      "f" "üìÇ+files"
      "g" "üåø+git"
      "h" "‚ùì+help"
      "i" "‚úèÔ∏è+insert"
      "n" "üìù+notes"
      "o" "üìñ+open"
      "p" "üóÇÔ∏è+project"
      "q" "üö™+quit"
      "s" "üîç+search"
      "t" "üîÄ+toggle"
      "w" "ü™ü+windows")
    (which-key-add-keymap-based-replacements bw/leader-h-map
      "r" "üîÑ+reload")
    (which-key-add-keymap-based-replacements bw/leader-o-map
      "h" "üìö+refs")

    ;; DIAGNOSTIC: Choreographed startup routine to test automation
    (add-hook 'emacs-startup-hook
              (lambda ()
                ;; 1s: Show message
                (run-with-timer 1 nil (lambda () (message "üé¨ DIAGNOSTIC: Starting automation test...")))

                ;; 2s: Create and switch to test buffer
                (run-with-timer 2 nil (lambda ()
                  (switch-to-buffer (get-buffer-create "*automation-test*"))
                  (insert "=== AUTOMATION TEST ===\n\n")))

                ;; 3s: Insert text
                (run-with-timer 3 nil (lambda ()
                  (insert "3s: Inserted this text\n")))

                ;; 4s: Insert more text
                (run-with-timer 4 nil (lambda ()
                  (insert "4s: More text inserted\n")))

                ;; 5s: Try execute-kbd-macro
                (run-with-timer 5 nil (lambda ()
                  (insert "5s: About to try execute-kbd-macro...\n")
                  (execute-kbd-macro (kbd "H e l l o SPC w o r l d RET"))))

                ;; 7s: Split window
                (run-with-timer 7 nil (lambda ()
                  (insert "7s: Splitting window\n")
                  (split-window-below)))

                ;; 9s: Switch to other window
                (run-with-timer 9 nil (lambda ()
                  (insert "9s: Switching to other window\n")
                  (other-window 1)))

                ;; 11s: Open messages buffer in other window
                (run-with-timer 11 nil (lambda ()
                  (switch-to-buffer "*Messages*")))

                ;; 13s: Switch back
                (run-with-timer 13 nil (lambda ()
                  (other-window 1)
                  (insert "13s: Back in test buffer\n")))

                ;; 15s: Delete other window
                (run-with-timer 15 nil (lambda ()
                  (delete-other-windows)
                  (insert "15s: Deleted other window\n")))

                ;; 17s: Try SPC key
                (run-with-timer 17 nil (lambda ()
                  (insert "17s: Pressing SPC key now...\n")
                  (setq unread-command-events (listify-key-sequence (kbd "SPC")))))

                ;; 19s: Cancel with C-g
                (run-with-timer 19 nil (lambda ()
                  (keyboard-quit)
                  (insert "19s: Sent keyboard-quit\n")))

                ;; 21s: Try calling the keymap directly
                (run-with-timer 21 nil (lambda ()
                  (insert "21s: Calling which-key--show-keymap directly\n")
                  (which-key--show-keymap "SPC" bw/leader-map nil nil nil)))

                ;; 23s: Hide it
                (run-with-timer 23 nil (lambda ()
                  (which-key--hide-popup)
                  (insert "23s: Hid which-key popup\n")))

                ;; 25s: Flash modeline
                (run-with-timer 25 nil (lambda ()
                  (insert "25s: Inverting colors briefly\n")
                  (invert-face3s: Inserted this text
4s: More text inserted
5s: About to try execute-kbd-macro...
7s: Splitting window
9s: Switching to other window
15s: Deleted other window
17s: Pressing SPC key now...
 'mode-line)))

                ;; 27s: Restore modeline
                (run-with-timer 27 nil (lambda ()
                  (invert-face 'mode-line)
                  (insert "27s: Restored modeline\n")))

                ;; 29s: Done
                (run-with-timer 29 nil (lambda ()
                  (insert "\n=== DIAGNOSTIC COMPLETE ===\n")
                  (insert "Review what happened above.\n")
                  (message "üé¨ DIAGNOSTIC: Test complete!"))))))

  ;; -------------------------------------------------------------------------
  ;; üå≤ Neotree (eager)
  ;; -------------------------------------------------------------------------
  (use-package neotree
    :demand t
    :config
    (setq neo-theme 'nerd
          neo-smart-open t
          neo-window-width 30
          neo-show-hidden-files t))

  ;; -------------------------------------------------------------------------
  ;; üìã Ibuffer (built-in, eager config)
  ;; -------------------------------------------------------------------------
  (require 'ibuffer)
  (setq ibuffer-expert t
        ibuffer-show-empty-filter-groups nil)
  (add-hook 'ibuffer-mode-hook
            (lambda ()
              (ibuffer-auto-mode 1)))

  ) ;; END bw-doom



